<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="12dp"
    android:background="@drawable/ticket_background">

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/telescope_event_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleEventText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/orbitron"
        android:text="Titolo"
        android:textColor="@color/cyan"
        app:layout_constraintEnd_toStartOf="@+id/topCutView"
        app:layout_constraintStart_toEndOf="@+id/eventImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTicketText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="25/07/2025"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/titleEventText"
        app:layout_constraintStart_toStartOf="@+id/timeTicketText"
        app:layout_constraintTop_toBottomOf="@+id/titleEventText" />

    <TextView
        android:id="@+id/timeTicketText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="14:30"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/priceTicketText"
        app:layout_constraintStart_toStartOf="@+id/typeTicketText"
        app:layout_constraintTop_toBottomOf="@+id/dateTicketText" />

    <TextView
        android:id="@+id/typeTicketText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Intera"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/eventImage"
        app:layout_constraintTop_toBottomOf="@+id/timeTicketText" />

    <TextView
        android:id="@+id/priceTicketText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="â‚¬ 14,00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/typeTicketText"
        app:layout_constraintStart_toEndOf="@+id/typeTicketText"
        app:layout_constraintTop_toTopOf="@+id/typeTicketText" />

    <View
        android:id="@+id/lineView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:background="@drawable/line_separator"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/bottomCutView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCutView" />

    <View
        android:id="@+id/topCutView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_cut"
        android:translationY="-14dp"
        app:layout_constraintEnd_toEndOf="@+id/lineView"
        app:layout_constraintStart_toStartOf="@+id/lineView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomCutView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_cut"
        android:translationY="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lineView"
        app:layout_constraintStart_toStartOf="@+id/lineView" />

    <ImageView
        android:id="@+id/qrcodeTicketImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="-14dp"
        android:src="@drawable/qrcode_ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topCutView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>