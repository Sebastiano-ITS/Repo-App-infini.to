<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/dialog_container"
android:layout_width="300dp"
android:layout_height="200dp"
android:background="@drawable/edittext_border_white"
android:padding="24dp"
android:layout_gravity="center"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintWidth_max="400dp">

<!-- Testo principale -->
<TextView
    android:id="@+id/tv_message"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:fontFamily="@font/orbitron"
    android:gravity="center"
    android:lineSpacingMultiplier="1.2"
    android:text="@string/confirmation_message"
    android:textColor="#FF0000"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/yesBtn"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.3" />

<!-- Pulsante SÃ¬ -->
<Button
    android:id="@+id/yesBtn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:text="@string/yes_button"
    android:textColor="#000000"
    android:fontFamily="@font/orbitron"
    android:textSize="16sp"
    android:textStyle="bold"
    app:backgroundTint="@null"
    android:background="@drawable/button_rounded_white"
    android:layout_marginEnd="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/noBtn"
    app:layout_constraintHorizontal_chainStyle="spread_inside" />

<!-- Pulsante No -->
<Button
    android:id="@+id/noBtn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:text="@string/no_button"
    android:textColor="#000000"
    android:fontFamily="@font/orbitron"
    android:textSize="16sp"
    android:textStyle="bold"
    app:backgroundTint="@null"
    android:background="@drawable/button_rounded_white"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/yesBtn"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>