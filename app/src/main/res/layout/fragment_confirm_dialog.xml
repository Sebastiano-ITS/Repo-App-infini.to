<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#80000000">

    <!-- Container del dialog centrato -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/black2"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="400dp">

        <!-- Testo principale -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/orbitron"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="Sei sicuro\ndi continuare ?"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/yesBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <!-- Pulsante Sì -->
        <Button
            android:id="@+id/yesBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Sì"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/button_rounded_white"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/noBtn"
            app:layout_constraintHorizontal_chainStyle="spread_inside" />

        <!-- Pulsante No -->
        <Button
            android:id="@+id/noBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="No"
            android:textColor="#000000"
            android:fontFamily="@font/orbitron"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/button_rounded_white"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yesBtn"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>