<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#000000">

    <!-- Header -->
    <androidx.fragment.app.FragmentContainerView
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Novità Section -->
            <TextView
                android:id="@+id/tv_novita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Novità"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/orbitron"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Moon Event Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_moon_event"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_novita">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:background="#3949AB"
                        android:padding="4dp"
                        android:text="VENERDÌ 17 SETTEMBRE"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ORE 21:00 - 22:00"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_date"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

                    <TextView
                        android:id="@+id/tv_moon_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="MOON"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tv_time"
                        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Live Original Soundtrack"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_moon_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_moon_title" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ticket from € 15,00"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_subtitle"
                        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle" />

                    <Button
                        android:id="@+id/btn_prenota"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"

                        android:paddingHorizontal="16dp"
                        android:text="PRENOTA"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/tv_price"
                        app:layout_constraintTop_toBottomOf="@+id/tv_price" />

                    <ImageView
                        android:id="@+id/iv_moon_cover"
                        android:layout_width="120dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Indicator dots -->
            <View
                android:id="@+id/dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="16dp"

                app:layout_constraintEnd_toStartOf="@+id/dot2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_moon_event" />

            <View
                android:id="@+id/dot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="4dp"

                app:layout_constraintEnd_toStartOf="@+id/dot3"
                app:layout_constraintStart_toEndOf="@+id/dot1"
                app:layout_constraintTop_toTopOf="@+id/dot1" />

            <View
                android:id="@+id/dot3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="4dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dot2"
                app:layout_constraintTop_toTopOf="@+id/dot1" />

            <!-- Prossime attività Section -->
            <TextView
                android:id="@+id/tv_prossime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Prossime attività"
                android:fontFamily="@font/orbitron"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dot1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_prossime">

                <!-- Serata osservativa -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_serata"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_telescope"
                            android:layout_width="32dp"
                            android:layout_height="32dp"

                            android:layout_marginStart="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_serata_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="Serata osservativa"
                            android:textAlignment="center"
                            android:textColor="#00BCD4"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/tv_serata_subtitle"
                            app:layout_constraintEnd_toEndOf="@+id/tv_serata_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_serata_subtitle" />

                        <TextView
                            android:id="@+id/tv_serata_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/orbitron"
                            android:text="Planetario + Telescopio"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow1"
                            app:layout_constraintStart_toEndOf="@+id/iv_telescope"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_serata_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="27 Giugno"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/tv_serata_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_serata_subtitle"
                            app:layout_constraintTop_toBottomOf="@+id/tv_serata_subtitle" />

                        <ImageView
                            android:id="@+id/iv_arrow1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Song for stars -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_song"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_serata">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_music"
                            android:layout_width="32dp"
                            android:layout_height="32dp"

                            android:layout_marginStart="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_song_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="Song for stars"
                            android:textAlignment="center"
                            android:textColor="#00BCD4"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/tv_song_subtitle"
                            app:layout_constraintEnd_toEndOf="@+id/tv_song_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_song_subtitle" />

                        <TextView
                            android:id="@+id/tv_song_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/orbitron"
                            android:text="Paolo della Piana"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow2"
                            app:layout_constraintStart_toEndOf="@+id/iv_music"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_song_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="4 Luglio"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/tv_song_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_song_subtitle"
                            app:layout_constraintTop_toBottomOf="@+id/tv_song_subtitle" />

                        <ImageView
                            android:id="@+id/iv_arrow2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Lo spazio ai Bambini -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_bambini"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_song">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_rocket"
                            android:layout_width="32dp"
                            android:layout_height="32dp"

                            android:layout_marginStart="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_bambini_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="Lo spazio ai Bambini"
                            android:textAlignment="center"
                            android:textColor="#00BCD4"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/tv_bambini_subtitle"
                            app:layout_constraintEnd_toEndOf="@+id/tv_bambini_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_bambini_subtitle" />

                        <TextView
                            android:id="@+id/tv_bambini_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/orbitron"
                            android:text="FunLab Come partano le immagini"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow3"
                            app:layout_constraintStart_toEndOf="@+id/iv_rocket"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_bambini_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/orbitron"
                            android:text="5 e 6 Luglio"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="@+id/tv_bambini_subtitle"
                            app:layout_constraintStart_toStartOf="@+id/tv_bambini_subtitle"
                            app:layout_constraintTop_toBottomOf="@+id/tv_bambini_subtitle" />

                        <ImageView
                            android:id="@+id/iv_arrow3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>