<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="153dp"
    android:background="@drawable/ticket_background">

    <View
        android:id="@+id/lineView"
        android:layout_width="5dp"
        android:layout_height="127dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/line_separator"
        app:layout_constraintBottom_toTopOf="@+id/bottomCutView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCutView" />

    <View
        android:id="@+id/topCutView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_cut"
        android:translationY="-14dp"
        app:layout_constraintEnd_toEndOf="@+id/lineView"
        app:layout_constraintStart_toStartOf="@+id/lineView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomCutView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_cut"
        android:translationY="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lineView"
        app:layout_constraintStart_toStartOf="@+id/lineView" />

</androidx.constraintlayout.widget.ConstraintLayout>